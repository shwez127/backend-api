@{
    ViewData["Title"] = "Login";
}
@model DeskEntity.Model.LoginTable;

<html>
    <head>
        <script type="text/javascript">
            function preventBack() { window.history.forward(); }
            setTimeout("preventBack()", 0);
            window.onunload = function () { null };
        </script>
    </head>
<body>
    <form method="post">
        <section style="margin-top:90px">
            <div class="container-fluid h-custom">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-md-9 col-lg-6 col-xl-5">
                        <img src="~/img/Tablet login.gif"
                             class="img-fluid" alt="Sample image">
                    </div>
                    <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                        <form class="form-login">
                            <h3>Sign In</h3>
                            <br />
                            <!-- Email input -->
                            <div class="form-outline mb-4">
                                <input asp-for="Email" type="email" id="email" class="form-control form-control-lg"
                                       placeholder="Enter Email Address" required />
                                <label class="form-label" for="form3Example3">Email Address</label>
                            </div>

                            <!-- Password input -->
                            <div class="form-outline mb-3">
                                <input asp-for="Password" type="password" id="form3Example4" class="form-control form-control-lg"
                                       placeholder="Enter Password" required />
                                <label class="form-label" for="form3Example4">Password</label>
                            </div>

                            <div class="d-flex justify-content-between align-items-center">
                                <!-- Checkbox -->
                                <div class="form-check mb-0">
                                    <input class="form-check-input me-2" type="checkbox" value="" id="form2Example3" />
                                    <label class="form-check-label" for="form2Example3">
                                        Remember me
                                    </label>
                                </div>
                                <a asp-controller="Register" asp-action="ForgetPassword" class="text-body">Forgot password?</a>
                            </div>

                            <div class="text-center text-lg-start mt-4 pt-2">
                                <button type="submit" id="submit" class="btn btn-dark btn-lg"
                                        style="padding-left: 2.5rem; padding-right: 2.5rem;">
                                    Login
                                </button>
                                <div class="fw-bold mt-2 pt-1 mb-0">
                                    Don't have an account? <a asp-controller="Register" asp-action="EmployeeRegister1">Register Here</a>
                                </div>

                            </div>
                            @if (ViewBag.status == "Ok")
                            {
                                <div class="alert alert-success">@ViewBag.message</div>

                            }
                            else if (ViewBag.status == "Error")
                            {
                                <p class="text-xl-center" style="color:red;margin-top:10px">
                                    Invalid Email Address or Password
                                </p>
                            }
                        </form>
                    </div>
                </div>
            </div>
        </section>
    </form>

</body>
</html>

@model DeskEntity.Model.BookingSeat
@{
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
}
<h1>EditSeat</h1>

<div>
    <a asp-controller="BookingSeat" asp-action="AllSeats" AllSeats></a>

</div>

<form method="post" enctype="multipart/form-data">
    <h2>Booking</h2><hr />
    <div class="form-group">
        <label>Booking SeatId</label>
        <input type="text" asp-for="BookingSeatId" class="form-control"
               placeholder="enter seat Id" required />
    </div>

    <div class="form-group">
        <label>SeatStatus</label>
        <input type="text" asp-for="SeatStatus" class="form-control"
               placeholder="enter seat status" required />
    </div>
    <div class="form-group">
        <label>FromDate</label>
        <input type="date" asp-for="FromDate" class="form-control"
               placeholder="enter Date" required />
    </div>
    <div class="form-group">
        <label>ToDate</label>
        <input type="date" asp-for="ToDate" class="form-control"
               placeholder="enter date required />
    </div>


    <div class="form-group">
        <label>ShiftTime</label>
        <select asp-for="SeatShiftTime" class="form-control" asp-items="@ViewBag.shiftTimings" required></select>
    </div>

    <div class="form-group">
        <label>Seat Number</label>
        <input type="text" asp-for="SeatId" class="form-control"
               placeholder="enter seat" required />
    </div>
    <div class="form-group">
        <label>Employee Number</label>
        <input type="text" asp-for="@Model.Employee.EmployeeNumber" class="form-control"
               placeholder="Enter Employee Number" required />
    </div>

    <input type="submit" value="Save" class="btn btn-outline-success" />
    <input type="button" value="Reset" class="btn btn-outline-secondary" />
    <hr />
    @if (ViewBag.Status == "Ok")
    {
        <div class="alert alert-success">
            @ViewBag.message;
        </div>
    }

    else if (ViewBag.Status == "Error")
    {
        <div class="alert alert-danger">
            @ViewBag.message;
        </div>
    }
</form>


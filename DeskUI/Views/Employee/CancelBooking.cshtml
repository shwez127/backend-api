@{
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
}

@model DeskEntity.Model.BookingSeat
<h1>DeleteSeat</h1>

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label>BookingSeat Id</label>
        <input type="text" asp-for="BookingSeatId" class="form-control" 
               placeholder="Enter Booking Seat Id" required />
    </div>


    <input type="submit" value="Delete" class="btn btn-outline-success" />
    <input type="reset" value="Reset" class="btn btn-outline-secondary" />
    <hr />
    @if (ViewBag.Status == "Ok")
    {
        <div class="alert alert-success">
            @ViewBag.message;
        </div>
    }

    else if (ViewBag.Status == "Error")
    {
        <div class="alert alert-danger">
            @ViewBag.message;
        </div>
    }
</form>

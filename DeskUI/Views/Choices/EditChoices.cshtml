@model DeskEntity.Model.Choices

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewData["Title"] = "EditChoices";
}

<div>
    <hr />
    <a asp-controller="Choices" asp-action="Index">Index</a>
    <hr />
</div>

<form method="post" enctype="multipart/form-data">
    <h2>Edit Choices</h2>
    <div class="form-group">
        <label> FoodPerferences </label>
        <input type="text" asp-for="FoodPerferences" class="form-control" placeholder="enter FoodPerferences" required />
    </div><div class="form-group">
        <label> Data </label>
        <input type="text" asp-for="Data" class="form-control" placeholder="enter Data" required />
    </div><div class="form-group">
        <label> BookingSeatId </label>
        <input type="text" asp-for="BookingSeatId" class="form-control" placeholder="enter BookingSeatId" required />
    </div>
    <input type="submit" value="Save" class="btn btn-outline-success" />
    <input type="button" value="Reset" class="btn btn-outline-secondary" />
    <hr />
    @if (ViewBag.status == "Ok")
    {
        <div class="alert alert-success">
            @ViewBag.message
        </div>
    }
    else if (ViewBag.status == "Error")
    {
        <div class="alert alert-danger">
            @ViewBag.message
        </div>
    }
</form>



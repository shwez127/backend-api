@model DeskEntity.Model.Seat

<h1>AddSeat</h1>


<form method="post" enctype="multipart/form-data">
    <h2>Seat</h2><hr />

    <div class="form-group">
        <label>SeatNumber</label>
        <input type="text" asp-for="SeatNumber" class="form-control"
               placeholder="enter seatnumber" required />
    </div>

     <div class="form-group">
    <label>FloorId</label>
    <input type="text" asp-for="FloorId" class="form-control"
    placeholder="enter seatnumber" required />
    </div>


    <input type="submit" value="Save" class="btn btn-outline-success" />
    <input type="button" value="Reset" class="btn btn-outline-secondary" />
    <hr />
    @if (ViewBag.Status == "Ok")
    {
        <div class="alert alert-success">
            @ViewBag.message;
        </div>
    }

    else if (ViewBag.Status == "Error")
    {
        <div class="alert alert-danger">
            @ViewBag.message;
        </div>
    }
</form>
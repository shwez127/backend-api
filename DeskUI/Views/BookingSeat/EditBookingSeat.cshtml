@model DeskEntity.Model.BookingSeat
@{
    ViewData["Title"] = "EditSeat";
}

<h1>EditSeat</h1>

<div>
    <a asp-controller="BookingSeat" asp-action="AllSeats" AllSeats></a>

</div>

<form method="post" enctype="multipart/form-data">
    <h2>Booking</h2><hr />
    <div class="form-group">
        <label>Booking SeatId</label>
        <input type="text" asp-for="BookingSeatId" class="form-control"
               placeholder="enter seatstatus" required />
    </div>
 
    <div class="form-group">
        <label>SeatStatus</label>
        <input type="text" asp-for="SeatStatus" class="form-control"
               placeholder="enter Show Id" required />
    </div>
    <div class="form-group">
        <label>ToDate</label>
        <input type="date" asp-for="ToDate" class="form-control"
               placeholder="enter User Id" required />
    </div>
    <div class="form-group">
        <label>FromDate</label>
        <input type="date" asp-for="FromDate" class="form-control"
               placeholder="enter status" required />
    </div>
    <div class="form-group">
        <label>ShiftTime</label>
        <input type="text" asp-for="SeatShiftTime" class="form-control"
               placeholder="enter status" required />
    </div>
    <div class="form-group">
    <label>EmployeeId</label>
    <input type="text" asp-for="EmployeeID" class="form-control"
    placeholder="enter status" required />
    </div>

    <input type="submit" value="Save" class="btn btn-outline-success" />
    <input type="button" value="Reset" class="btn btn-outline-secondary" />
    <hr />
    @if (ViewBag.Status == "Ok")
    {
        <div class="alert alert-success">
            @ViewBag.message;
        </div>
    }

    else if (ViewBag.Status == "Error")
    {
        <div class="alert alert-danger">
            @ViewBag.message;
        </div>
    }
</form>
@model DeskEntity.Model.BookingSeat

<h1>AddBookingSeat</h1>

<div>
    <a asp-controller="Booking" asp-action="Index">Booking</a>

</div>

<form method="post" enctype="multipart/form-data">
    <h2>BookingSeat</h2><hr />
   

    <div class="form-group">
        <label>SeatStaus</label>
        <input type="text" asp-for="SeatStatus" class="form-control"
               placeholder="enter seatstatus" required />
    </div>
    <div class="form-group">
        <label>ToDate</label>
        <input type="date" asp-for="ToDate" class="form-control"
               placeholder="enter status" required />
    </div>
    <div class="form-group">
        <label>FromDate</label>
        <input type="date" asp-for="FromDate" class="form-control"
               placeholder="enter seat" required />

        <div class="form-group">
            <label>ShiftStart</label>
            <input type="date" asp-for="ShiftStart" class="form-control"
                   placeholder="enter seat" required />
        </div>


        <div class="form-group">
            <label>ShiftEnd</label>
            <input type="date" asp-for="ShiftEnd" class="form-control"
                   placeholder="enter seat" required />
        </div>

        <div class="form-group">
            <label>ShiftTime</label>
            <input type="text" asp-for="SeatShiftTime" class="form-control"
                   placeholder="enter seat" required />
        </div>

        <div class="form-group">
        <label>Employee Id</label>
        <input type="text" asp-for="EmployeeID" class="form-control"
        placeholder="enter seat" required />
        </div>
        <input type="submit" value="Save" class="btn btn-outline-success" />
        <input type="button" value="Reset" class="btn btn-outline-secondary" />
        <hr />
        @if (ViewBag.Status == "Ok")
        {
            <div class="alert alert-success">
                @ViewBag.message;
            </div>
        }

        else if (ViewBag.Status == "Error")
        {
            <div class="alert alert-danger">
                @ViewBag.message;
            </div>
        }
</form>
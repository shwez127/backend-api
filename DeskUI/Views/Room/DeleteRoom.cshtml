@model DeskEntity.Model.Room


@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewData["Title"] = "DeleteRoom";
}



<div>
    <hr />
    <a asp-controller="Room" asp-action="Index">Index</a>
    <hr />
</div>



<form method="post" enctype="multipart/form-data">
    <h2>Delete Room</h2>
    <div class="form-group">
        <label> Room Id </label>
        <input type="text" asp-for="RoomId" class="form-control" placeholder="enter Room Id" required />
    </div>



    <input type="submit" value="Save" class="btn btn-outline-success" />
    <input type="button" value="Reset" class="btn btn-outline-secondary" />
    <hr />
    @if (ViewBag.status == "Ok")
    {
        <div class="alert alert-success">
            @ViewBag.message
        </div>
    }
    else if (ViewBag.status == "Error")
    {
        <div class="alert alert-danger">
            @ViewBag.message
        </div>
    }
</form>

